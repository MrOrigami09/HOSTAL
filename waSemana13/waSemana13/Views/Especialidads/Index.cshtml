@model IEnumerable<waSemana13.Especialidad>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Especialidades</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group row">
            @Html.Label("", htmlAttributes: new { @class = "control-label col-md-2", @for = "pnombre" })
            <div class="col-md-3 pr-0">
                @Html.Editor("pnombre", new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese nombre" } })
            </div>
            <div class="col-md-1 pl-0">
                <input type="submit" value="Buscar" class="btn btn-primary w-100" />
            </div>
        </div>
    </div>
    <br />
}





<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdEspecialidad }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdEspecialidad }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEspecialidad }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

